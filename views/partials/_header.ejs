<header>
  <style>
    .input-inline {
  vertical-align: middle;
  margin: 5px 10px 5px 0;
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd;
}
@media (max-width: 800px) {
  .input-inline {
    margin: 10px 0;
  }
  .input-inline {
    flex-direction: column;
    align-items: stretch;
  }
}



  </style>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>    
    <% if (username) { %>
      Logged In As: <%= username %> &nbsp; &nbsp;  
      <form method="POST" action="/logout">
      <button>Logout</button>
      </form>
    <% } else{ %>
      <form method="POST" action="/login">
      <input class="input-inline" type="text" placeholder="Username" name="username">
      <button>Submit</button>
    <% } %>
    </form>
  </nav>

</header>